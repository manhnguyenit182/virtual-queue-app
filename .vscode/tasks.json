{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Metro Bundler",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Android",
      "type": "shell",
      "command": "npx",
      "args": ["react-native", "run-android"],
      "group": "build",
      "dependsOn": "Start Metro Bundler",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Android",
      "type": "shell",
      "command": "cd",
      "args": ["android", "&&", "./gradlew", "assembleDebug"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "cd",
      "args": ["android", "&&", "./gradlew", "clean"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
